<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1" author="Artico">
        <preConditions onFail="MARK_RAN" onFailMessage="tabela restaurante ja existe">
            <not>
                <tableExists tableName="restaurante" />
            </not>
        </preConditions>

        <createTable tableName="restaurante">
            <column name="id" type="integer">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_restaurante" />
            </column>
            <column name="nome" type="varchar(50)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="cozinha" type="varchar(30)">
                <constraints nullable="false" />
            </column>
            <column name="endereco" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="entrega" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Artico">
        <preConditions onFail="MARK_RAN" onFailMessage="tabela prato ja existe">
            <not>
                <tableExists tableName="prato" />
            </not>
        </preConditions>

        <createTable tableName="prato">
            <column name="id" type="integer">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_prato" />
            </column>
            <column name="nome" type="varchar(50)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Artico">
        <preConditions onFail="MARK_RAN" onFailMessage="tabela cardapio ja existe">
            <not>
                <tableExists tableName="cardapio" />
            </not>
        </preConditions>

        <createTable tableName="cardapio">
            <column name="id" type="integer">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cardapio" />
            </column>

            <column name="id_restaurante" type="integer">
                <constraints nullable="false" foreignKeyName="fk_cardapio_restaurante" referencedTableName="restaurante" referencedColumnNames="id" />
            </column>

            <column name="id_prato" type="integer">
                <constraints nullable="false" foreignKeyName="fk_cardapio_prato" referencedTableName="prato" referencedColumnNames="id" />
            </column>

            <column name="valor" type="float">
                <constraints nullable="false"/>
            </column>


        </createTable>
    </changeSet>


</databaseChangeLog>      